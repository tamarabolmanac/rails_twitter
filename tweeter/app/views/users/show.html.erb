<p id="notice"><%= notice %></p>
<div >
<h1> <strong> <%= @user.username %></strong></h1>
<%= link_to 'Search tweeter', users_path %> |
<%= link_to 'News page', tweets_path %>
<div>
	<% if @user.id == current_user.id then %>
		<h2>Your info </h2>
	<%else%>
		<h2>User info </h2>
	<%end%>
	
	<p>
	  <strong>First name:</strong>
	  <%= @user.first_name %>
	</p>

	<p>
	  <strong>Last name:</strong>
	  <%= @user.last_name %>
	</p>

	<p>
	  <strong>Username:</strong>
	  <%= @user.username %>
	</p>

	<p>
	  <strong>Email:</strong>
	  <%= @user.email %>
	</p>

	<p>
	  <strong>Mentioned:</strong>
	  <%= @user.mentions %> times
	</p>
	
	
</div>

<% if @user.id == current_user.id then %>
   
	<div>
		<div class="tweet_link">
		<%= link_to 'Tweet', new_tweet_path  %>
		</div>
		<hr>
		<h2>Your tweets</h2>
		<% @user.tweets.each do |tweet| %>
			<p><strong><%= tweet.title %></strong></p>
			<%= tweet.text %>
			<hr>
		<% end %>
	</div>

<%else%>

	<% if is_following(current_user.id, @user.id) %>
		<div>
		     <%= link_to 'Unfollow', unfollow_user_path,
		     method: :post %>
		</div>
		<h2>Tweets</h2>
		<% @user.tweets.each do |tweet| %>
			<p><strong><%= tweet.title %></strong></p>
			<%= tweet.text %>
			<hr>
		<% end %>
	<% else %>
		<div>
		     <%= link_to 'Follow', follow_user_path,
		     method: :post %>
		</div>
	<%end %>

<%end%>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
<br>
</div>


